@model Cdmx.Scg.Sancionados.Web.Models.TipoOrigenViewModel

@using (Html.BeginForm(null, null, FormMethod.Post, new { @class = "form-editar" }))
{
    @Html.AntiForgeryToken()

        <div class="card-body">

            <h4>Editar registro</h4>
            <hr class="green pb-2" />

            <div class="form-horizontal">
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                <div class="form-group">
                    @*@Html.LabelFor(model => model.IdTipoOrigen, htmlAttributes: new { @class = "control-label col-md-2" })*@
                    <div>
                        @Html.HiddenFor(model => model.IdTipoOrigen, new { htmlAttributes = new { @class = "form-control" } })
                        @*@Html.ValidationMessageFor(model => model.IdTipoOrigen, "", new { @class = "text-danger" })*@
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.DescOrigen, htmlAttributes: new { @class = "control-label" })
                    <div>
                        @Html.EditorFor(model => model.DescOrigen, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.DescOrigen, "", new { @class = "text-danger" })
                    </div>
                </div>
                <br />
                <div class="form-group ">

                    <div class="row">
                        <div class="mx-auto">
                            <a href="javascript://" class="btn btn-primary ml-5 ocultar-barra-lateral">Cancelar<span class="fa fa-ban ml-3" aria-hidden="true"></span></a>

                            <button type="submit" class="btn btn-primary ml-5 ">Guardar<span class="fa fa-save ml-3"></span></button>
                        </div>
                    </div>

                </div>
            </div>

        </div>    
    
}

<script>
    $(document).ready(function () {
        //Agrega el evento al boton submit para enviar la forma y registrar la informacion
        JsBase.ocultarBarraLateral('ocultar-barra-lateral').enviarFormulario('form-editar', true, 'tabla-principal');

    });
</script>
